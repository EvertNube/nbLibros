@using System.Globalization;
@model List<NubeBooks.Core.DTO.ProformaDTO>
@{
    ViewBag.Title = "BuscarProforma";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="bg-light lter b-b wrapper-md">
    <button class="btn m-b-xs btn-sm btn-info btn-addon pull-right m-l open-modal" data-toggle="modal" data-target="#modal-form-exportar"><i class="fa fa-cloud-download"></i>Exportar</button>
    <a href="@Url.Action("NuevaProforma", "Admin")" class="btn m-b-xs btn-sm btn-success btn-addon pull-right"><i class="fa fa-plus"></i>Agregar Nuevo</a>
    <h1 class="m-n font-thin h3">Busqueda de Proformas</h1>
</div>  
<div class="wrapper-md">
    <div class="panel panel-default">
        <div class="table-responsive">
            <table ui-jq="dataTable" ui-options="{
    oLanguage: {
        sLengthMenu: 'Mostrar _MENU_ registros',
        sSearch: 'Buscar:',
        sZeroRecords: 'No se encontraron registros que cumplan los términos de búsqueda.',
        sLoadingRecords: 'Cargando...',
        sInfo: 'Mostrando _START_-_END_ de _TOTAL_ registros.',
        sInfoEmpty: 'Mostrando _END_ de _TOTAL_ registros',
        sInfoFiltered: '(filtrados de un total _MAX_).',
        sEmptyTable: 'No hay información disponible para mostrar.',
        sProcessing: 'DataTables is currently busy',
        oPaginate: {
            sPrevious: 'Anterior',
            sNext: 'Siguiente'
        }
    }
}" class="table table-striped b-t b-b dataTable">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre Cliente</th>
                        <th>Forma Pago</th>
                        <th>Lugar Entrega</th>
                        <th>Estado</th>
                        <th>Mostrar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CodigoProforma</td>
                                <td>@item.EntidadResponsable.Nombre</td>
                                <td>@item.FormaPago</td>
                                <td>@item.LugarEntrega</td>
                                <td>@(item.Estado==1 ? "Activo" : "Inactivo" )</td>
                                <td>
                                    <a href="@Url.Action("Proforma", "Admin", new { id = item.IdProforma})"><i class="fa fa-search" title="Visualizar">adasdadad</i></a>
                                </td>
                            </tr>
                                        }
                                    }
                </tbody>
            </table>
        </div>
    </div>
</div>