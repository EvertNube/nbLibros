                                {
                                    <optgroup label="@tipoEnt.Nombre">
                                        @foreach (var item in (List<EntidadResponsableDTO>)ViewBag.EntidadesResponsables)
                                        {
                                            if (tipoEnt.IdTipoEntidad == item.IdTipoEntidad)
                                            {
