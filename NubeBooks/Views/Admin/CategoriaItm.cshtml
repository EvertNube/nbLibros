@using NubeBooks.Core.Logistics.DTO
@model CategoriaItmDTO
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{var cadena = "";}
@if (Model == null || Model.IdCategoriaItm == 0) { cadena = "Nueva"; }
else { cadena = "Actualizar"; }
<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">@cadena Categoría de Items</h1>
</div>
<div class="wrapper-md" ng-controller="FormDemoCtrl">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("AddCategoriaItm", "Admin", FormMethod.Post))
            {
                @Html.Partial("_showAlertMessages")
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Nombre de la Categoría</label>
                    @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control", @placeholder = "Ingrese la Categoría", @type = "text", autofocus = "" })
                    @Html.ValidationMessageFor(u => u.Nombre)
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>
                @Html.TextBoxFor(u => u.IdCategoriaItm, new { @value = Model.IdCategoriaItm != 0 ? Model.IdCategoriaItm.ToString() : "", @type = "hidden" })
                @Html.TextBoxFor(u => u.IdEmpresa, new { @value = Model.IdEmpresa, @type = "hidden" })
                <div class="form-group">
                    @{var btnName = (Model != null && Model.IdCategoriaItm > 0) ? "Guardar Cambios" : "Crear";}
                    <button type="submit" class="btn btn-sm btn-success">@btnName</button>
                    <a class="btn btn-default" href="@Url.Action("CategoriaItms", "Admin")">Cancelar</a>
                </div>
                        }
        </div>
    </div>
</div>