                    grid: { hoverable: true, clickable: true, borderWidth: 0, color: '#ccc' },
                    tooltip: true,
                    tooltipOpts: { content: '%s: %p.0%' }
                });
        };

        function PintarPieEgresos()
        {
            var list = @Html.Raw(Json.Encode(ViewBag.topEgrAreas));

            var lstchart = [];
            var sPie = "";

            var maxAreas = Object.size(list);
            if (maxAreas <= 0) {
